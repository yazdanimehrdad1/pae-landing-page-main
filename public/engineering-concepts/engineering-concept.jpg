<svg width="800" height="400" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="grid_grad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1E40AF;stop-opacity:0.2"/>
      <stop offset="100%" style="stop-color:#1E3A8A;stop-opacity:0.4"/>
    </linearGradient>
  </defs>
  <rect width="100%" height="100%" fill="url(#grid_grad)"/>
  
  <!-- Grid Pattern -->
  <g stroke="#FFFFFF" stroke-width="0.5" opacity="0.2">
    <g id="vertical-lines">
      <line x1="50" y1="0" x2="50" y2="400"/>
      <line x1="150" y1="0" x2="150" y2="400"/>
      <line x1="250" y1="0" x2="250" y2="400"/>
      <line x1="350" y1="0" x2="350" y2="400"/>
      <line x1="450" y1="0" x2="450" y2="400"/>
      <line x1="550" y1="0" x2="550" y2="400"/>
      <line x1="650" y1="0" x2="650" y2="400"/>
      <line x1="750" y1="0" x2="750" y2="400"/>
    </g>
    <g id="horizontal-lines">
      <line x1="0" y1="50" x2="800" y2="50"/>
      <line x1="0" y1="100" x2="800" y2="100"/>
      <line x1="0" y1="150" x2="800" y2="150"/>
      <line x1="0" y1="200" x2="800" y2="200"/>
      <line x1="0" y1="250" x2="800" y2="250"/>
      <line x1="0" y1="300" x2="800" y2="300"/>
      <line x1="0" y1="350" x2="800" y2="350"/>
    </g>
  </g>
  
  <!-- Circuit Elements -->
  <g stroke="#FFFFFF" stroke-width="2" fill="none">
    <!-- Voltage Source -->
    <circle cx="150" cy="200" r="30"/>
    <line x1="150" y1="160" x2="150" y2="240"/>
    
    <!-- Resistors -->
    <path d="M 250,200 L 270,200 L 280,180 L 290,220 L 300,180 L 310,220 L 320,180 L 330,220 L 340,200 L 360,200" stroke="#FFFFFF"/>
    
    <!-- Capacitor -->
    <line x1="450" y1="180" x2="450" y2="195"/>
    <line x1="430" y1="195" x2="470" y2="195"/>
    <line x1="430" y1="205" x2="470" y2="205"/>
    <line x1="450" y1="205" x2="450" y2="220"/>
    
    <!-- Inductor -->
    <path d="M 550,200 C 560,200 560,180 570,180 S 580,200 590,200 S 600,180 610,180 S 620,200 630,200" stroke="#FFFFFF"/>
  </g>
  
  <!-- Waveform -->
  <path d="M 50,300 Q 100,200 150,300 T 250,300 T 350,300 T 450,300 T 550,300 T 650,300 T 750,300" 
        stroke="#60A5FA" stroke-width="3" fill="none"/>
</svg> 