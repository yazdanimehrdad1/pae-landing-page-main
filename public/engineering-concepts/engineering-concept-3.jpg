<svg width="800" height="400" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="grid_grad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1E40AF;stop-opacity:0.2"/>
      <stop offset="100%" style="stop-color:#1E3A8A;stop-opacity:0.4"/>
    </linearGradient>
  </defs>
  <rect width="100%" height="100%" fill="url(#grid_grad)"/>
  
  <!-- Grid Pattern -->
  <g stroke="#FFFFFF" stroke-width="0.5" opacity="0.2">
    <g id="vertical-lines">
      <line x1="100" y1="0" x2="100" y2="400"/>
      <line x1="200" y1="0" x2="200" y2="400"/>
      <line x1="300" y1="0" x2="300" y2="400"/>
      <line x1="400" y1="0" x2="400" y2="400"/>
      <line x1="500" y1="0" x2="500" y2="400"/>
      <line x1="600" y1="0" x2="600" y2="400"/>
      <line x1="700" y1="0" x2="700" y2="400"/>
    </g>
    <g id="horizontal-lines">
      <line x1="0" y1="100" x2="800" y2="100"/>
      <line x1="0" y1="200" x2="800" y2="200"/>
      <line x1="0" y1="300" x2="800" y2="300"/>
    </g>
  </g>
  
  <!-- Battery System -->
  <g stroke="#FFFFFF" stroke-width="2" fill="none">
    <!-- Battery Cells -->
    <g transform="translate(150, 100)">
      <!-- Cell 1 -->
      <rect x="0" y="0" width="100" height="200" rx="10"/>
      <line x1="0" y1="100" x2="100" y2="100"/>
      <text x="50" y="50" text-anchor="middle" fill="white" font-size="24">+</text>
      <text x="50" y="150" text-anchor="middle" fill="white" font-size="24">-</text>
    </g>
    
    <g transform="translate(350, 100)">
      <!-- Cell 2 -->
      <rect x="0" y="0" width="100" height="200" rx="10"/>
      <line x1="0" y1="100" x2="100" y2="100"/>
      <text x="50" y="50" text-anchor="middle" fill="white" font-size="24">+</text>
      <text x="50" y="150" text-anchor="middle" fill="white" font-size="24">-</text>
    </g>
    
    <g transform="translate(550, 100)">
      <!-- Cell 3 -->
      <rect x="0" y="0" width="100" height="200" rx="10"/>
      <line x1="0" y1="100" x2="100" y2="100"/>
      <text x="50" y="50" text-anchor="middle" fill="white" font-size="24">+</text>
      <text x="50" y="150" text-anchor="middle" fill="white" font-size="24">-</text>
    </g>
  </g>
  
  <!-- Connection Lines -->
  <g stroke="#60A5FA" stroke-width="2">
    <!-- Horizontal Connections -->
    <path d="M 250,125 L 350,125"/>
    <path d="M 450,125 L 550,125"/>
    <path d="M 250,275 L 350,275"/>
    <path d="M 450,275 L 550,275"/>
    
    <!-- Data Flow Indicators -->
    <g fill="#60A5FA">
      <circle cx="300" cy="125" r="3"/>
      <circle cx="500" cy="125" r="3"/>
      <circle cx="300" cy="275" r="3"/>
      <circle cx="500" cy="275" r="3"/>
    </g>
  </g>
  
  <!-- Energy Flow Animation -->
  <g stroke="#60A5FA" stroke-width="2">
    <path d="M 150,350 Q 400,330 650,350" fill="none"/>
    <path d="M 150,370 Q 400,350 650,370" fill="none"/>
  </g>
</svg> 